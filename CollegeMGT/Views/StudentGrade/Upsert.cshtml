@model CollegeMGT.Core.View_Models.StudentGradeViewModel;

@{ 
    var title = "Add StudentGrade";
}
<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if(Model.StudentGrade.StudentGradeId != 0)
        {
            //Edit
            title = "Update StudentGrade";
            <input type="hidden" asp-for="StudentGrade.StudentGradeId" />
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
@*            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="StudentGrade.Student.StudentName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="StudentGrade.Student.StudentName" class="form-control" />
                    <span asp-validation-for="StudentGrade.Student.StudentName" class="text-danger"></span>
                </div>
            </div>*@
            <br />
            <div class="form-group row">
                <div class="col-4">
                    Student
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(c => c.StudentGrade.StudentId, Model.StudentList, "-Select a Student", new { @class = "form-control" })
                    <span asp-validation-for="StudentGrade.StudentId" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    Subject
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(c => c.StudentGrade.SubjectId, Model.SubjectList, "-Select a Subject", new { @class = "form-control" })
                    <span asp-validation-for="StudentGrade.SubjectId" class="text-danger"></span>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <div class="col-4">
                    Grade
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(c => c.StudentGrade.GradeId, Model.GradeList, "-Select a Grade", new { @class = "form-control" })
                    <span asp-validation-for="StudentGrade.GradeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4  ">
                    @if (Model.StudentGrade.StudentGradeId != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.StudentGrade.StudentGradeId" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
 }